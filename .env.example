# ── Anthropic API ──────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# ── Google OAuth (for workspace-mcp) ───────────────────────────────────────────
# Create credentials at console.cloud.google.com → OAuth 2.0 → Desktop App
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
# Your Gmail address (used as the default for all MCP tool calls)
USER_GOOGLE_EMAIL=your@gmail.com

# ── MCP Server ─────────────────────────────────────────────────────────────────
# Leave as "uvx" to run workspace-mcp via uvx (no install needed)
# Or set to the path of the workspace-mcp executable if installed separately
GMAIL_MCP_SERVER_PATH=uvx
GCAL_MCP_SERVER_PATH=uvx

# ── Storage Paths ──────────────────────────────────────────────────────────────
CHROMA_PATH=data/chroma
SQLITE_PATH=data/email_agent.db

# ── Briefing Configuration ─────────────────────────────────────────────────────
# Time for scheduled daily briefing (HH:MM, 24-hour format)
BRIEFING_TIME=07:00

# Output destinations (true/false, each independent)
BRIEFING_OUTPUT_TERMINAL=true    # print Rich panel to stdout
BRIEFING_OUTPUT_FILE=false       # write data/briefings/YYYY-MM-DD.md
BRIEFING_OUTPUT_EMAIL=false      # send via Gmail to BRIEFING_EMAIL_TO

# Required if BRIEFING_OUTPUT_EMAIL=true
BRIEFING_EMAIL_TO=your@gmail.com

# ── Email Polling ──────────────────────────────────────────────────────────────
POLL_INTERVAL_SECONDS=60
