# ── Anthropic API ──────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# ── MCP Server Paths ───────────────────────────────────────────────────────────
GMAIL_MCP_SERVER_PATH=/path/to/gmail-mcp-server
GCAL_MCP_SERVER_PATH=/path/to/gcal-mcp-server

# ── Storage Paths ──────────────────────────────────────────────────────────────
CHROMA_PATH=data/chroma
SQLITE_PATH=data/email_agent.db

# ── Briefing Configuration ─────────────────────────────────────────────────────
# Output destination: file | email | stdout
BRIEFING_OUTPUT=file
# Cron expression for scheduled briefings (default: 7am daily)
BRIEFING_SCHEDULE=0 7 * * *
BRIEFING_OUTPUT_DIR=data/briefings

# ── Email Polling ──────────────────────────────────────────────────────────────
POLL_INTERVAL_SECONDS=60

# ── Optional: Self-email for briefing delivery ─────────────────────────────────
# Only needed if BRIEFING_OUTPUT=email
SELF_EMAIL=your@gmail.com
